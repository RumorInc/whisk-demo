<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Self-Ordering</title>
    <link rel="icon" href="/logo.png">
    <link rel="stylesheet" href="/order.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <script src="/scripts/handle.js"></script>
    <script src="/socket.io/socket.io.js"></script>
</head>
<body>
    <div class="app-container">
        <header class="app-header">
            <h1>WHisk</h1>
            <p>Your Culinary Journey Begins Here</p>
        </header>

        <main class="main-content">
            <section class="menu-container">
                <h2>Our Menu</h2>
                <div class="menu-items" id="menu-items">
                    </div>
            </section>

            <aside class="cart-container">
                <div class="cart">
                    <h2>Your Order</h2>
                    <div id="cart-items" class="cart-items">
                        <p class="cart-empty-message">Your cart is empty.</p>
                    </div>
                    <div class="cart-summary" id="cart-summary" style="display: none;">
                        <div class="summary-item">
                            <span>Subtotal</span>
                            <span id="subtotal">₹0.00</span>
                        </div>
                        <div class="summary-item">
                            <span>Taxes (5%)</span>
                            <span id="taxes">₹0.00</span>
                        </div>
                        <div class="summary-total">
                            <span>Total</span>
                            <span id="total">₹0.00</span>
                        </div>
                    </div>
                    <button id="place-order-btn" class="place-order-btn" disabled>Place Order</button>
                    <div id="order-status" class="order-status"></div>
                </div>
            </aside>
        </main>
    </div>
    <script>
        const dishes = <%-JSON.stringify(dishes)%>;
    </script>
    <script src="/scripts/handle-order.js"></script>
</body>
</html>